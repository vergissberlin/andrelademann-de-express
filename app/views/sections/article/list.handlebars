{{> header}}

{{#unless profile}}
	{{> article-teaser}}
{{/unless}}

<section>
	{{#each (limit articles 60)}}
      <div class="jumbotron">
				{{#if profile}}
					{{> toolbar-edit slug="articles"}}
				{{/if}}
          <div class="row marketing">
              <div class="col-lg-6">
                  <h2><a href="/articles/{{slug title}}/">{{{title}}}</a></h2>
                  <time datetime="{{createdAt}}">
                      <small class="text-muted">{{formatRelative createdAt}}</small>
                  </time>
                  <p>{{{crop teaser limit=750}}}</p>
              </div>
              <div class="col-lg-6">
                  <img src="{{config.media.cdn}}{{image}}"
                       class="img-fluid">
              </div>
          </div>
      </div>
	{{/each}}
</section>

{{#if profile}}
	{{> toolbar-list section="articles"}}
{{/if}}
