{{#if local}}
	<picture>
		<source srcset="/img/content/1200/{{src}}" media="(min-width: 1025px)"/>
		<source srcset="/img/content/1024/{{src}}" media="(min-width: 820px)"/>
		<source srcset="/img/content/640/{{src}}" media="(min-width: 370px)"/>
		<source srcset="/img/content/320/{{src}}"/>
		<img
			src="/img/content/1200/{{src}}"
			lowsrc="/img/content/320/{{src}}"
			alt="{{html2text alt}}"
			title="{{html2text title}}"
			class="{{class}}"/>
	</picture>
{{else}}
	{{#if crop}}
		<picture>
			<source srcset="{{config.media.images}}{{src}}&w=1400&h=768&mode=crop" media="(min-width: 1025px)"/>
			<source srcset="{{config.media.images}}{{src}}&w=200&h=112&mode=crop" media="(min-width: 820px)"/>
			<source srcset="{{config.media.images}}{{src}}&w=640&h=360&mode=crop" media="(min-width: 370px)"/>
			<source srcset="{{config.media.images}}{{src}}&w=320&h=180&mode=crop"/>
			<img
				src="{{config.media.images}}{{src}}&w=600&h=338&mode=crop"
				lowsrc="{{config.media.images}}{{src}}&w=600&h=338&mode=crop&quality=1"
				alt="{{html2text alt}}"
				title="{{html2text title}}"
				class="{{class}}"/>
		</picture>
	{{else}}
		<picture>
			<source srcset="{{config.media.images}}{{src}}" media="(min-width: 1025px)"/>
			<source srcset="{{config.media.images}}{{src}}&w=200" media="(min-width: 820px)"/>
			<source srcset="{{config.media.images}}{{src}}&w=640" media="(min-width: 370px)"/>
			<source srcset="{{config.media.images}}{{src}}&w=320"/>
			<img
				src="{{config.media.images}}{{src}}&w=1200"
				lowsrc="{{config.media.images}}{{src}}&w=400&h=300&mode=crop&quality=1"
				alt="{{html2text alt}}"
				title="{{html2text title}}"
				class="{{class}}"/>
		</picture>
	{{/if}}
{{/if}}
